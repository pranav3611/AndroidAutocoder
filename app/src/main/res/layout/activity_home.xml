<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253A4B"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="349dp"
            android:layout_height="164dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="116dp"
            android:background="@drawable/home_options"
            android:elevation="20dp"
            android:outlineSpotShadowColor="@color/white" />

        <ImageView
            android:layout_width="349dp"
            android:layout_height="164dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/home_options"
            android:elevation="20dp"
            android:outlineSpotShadowColor="@color/white" />

        <ImageView
            android:layout_width="349dp"
            android:layout_height="164dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="544dp"
            android:background="@drawable/home_options"
            android:elevation="20dp"
            android:outlineSpotShadowColor="@color/white" />

        <ImageView
            android:layout_width="349dp"
            android:layout_height="164dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="758dp"
            android:background="@drawable/home_options"
            android:elevation="20dp"
            android:outlineSpotShadowColor="@color/white" />

    </RelativeLayout>

    </ScrollView>

    <!--top bar (menu icon , logo , logout icon)-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#DEE1E4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/menu_btn"
            android:onClick="menu_btn" />

        <ImageView
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:background="@drawable/app_logo" />

        <Button
            android:id="@+id/home_logoutbtn"
            android:layout_width="24.98dp"
            android:layout_height="26.95dp"
            android:layout_marginLeft="367.33dp"
            android:layout_marginTop="16.51dp"
            android:background="@drawable/logout" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnNew"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="720dp"
            android:background="@drawable/round_btn"
            android:fontFamily="@font/segoe_ui"
            android:text="New +"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu" />


</androidx.drawerlayout.widget.DrawerLayout>
